

<p>
  <strong>Name:</strong>
  <%= @course.name %>
</p>

<p>
  <strong>Id:</strong>
  <%= @course.course_id %>
</p>

<p>
  <strong>Description:</strong>
  <%= @course.description %>
</p>

<% if current_user.enrolled_in?(@course) %>
       Enrolled
     <% else %>
<%= link_to 'Enroll', course_enrollments_path(@course), class: 'btn btn-primary', method: :post %>
<% end %>
<%= link_to 'Sections', course_sections_path(@course.id) %> |
<%= link_to 'Add Section', new_course_section_path(@course.id) %> |
<%= link_to 'Edit', edit_course_path(@course) %> |
<%= link_to 'Destroy', @course, method: :delete, data: { confirm: 'Are you sure?' } %> |
<%= link_to 'Back', courses_path %>

