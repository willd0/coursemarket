<p id="notice"><%= notice %></p>

<h1>Sections</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Section</th>
      <th>Section number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.name %></td>
        <td><%= section.section_id %></td>
        <td><%= section.section_number %></td>
        <td><%= link_to 'Show', course_section_path(section.course, section) %></td>
        <td><%= link_to 'Edit', edit_course_section_path(section.course, section) %></td>
        <td><%= link_to 'Destroy', course_section_path(section.course, section), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Section', new_course_section_path %>
<%= link_to 'Back', course_path(@course) %>
